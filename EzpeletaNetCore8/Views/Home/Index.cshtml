@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h2 class="display-7">Panel de Resultados</h2>
    <p>UsuarioID: @ViewBag.UsuarioID</p>
</div>

<div class="row">

    <div class="col-md-4">

        <div class="row">

            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-search me-1"></i>
                        Métodos de Búsqueda
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
                                <label class="control-label">Tipo de Ejercicio:</label>
                                @Html.DropDownList("TipoEjercicioID", null, htmlAttributes: new
                                    {
                                        @class =
                                         "form-control"
                                    })
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 col-6 mb-2">
                                <label class="control-label">Mes:</label>
                                <select class="form-control" id="MesEjercicioBuscar">
                                    <option value="1">Enero</option>
                                    <option value="2">Febrero</option>
                                    <option value="3">Marzo</option>
                                    <option value="4">Abril</option>
                                    <option value="5" selected>Mayo</option>
                                    <option value="6">Junio</option>
                                    <option value="7">Julio</option>
                                    <option value="8">Agosto</option>
                                    <option value="9">Septiembre</option>
                                    <option value="10">Octubre</option>
                                    <option value="11">Noviembre</option>
                                    <option value="12">Diciembre</option>
                                </select>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6 mb-2">
                                <label class="control-label">Año:</label>
                                <select class="form-control" id="AnioEjercicioBuscar">
                                    <option value="2023">2023</option>
                                    <option value="2024" selected>2024</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-bar me-1"></i>
                        Tipos de Ejercicios
                    </div>
                    <div class="card-body" style="height: 48vh;">
                        <canvas id="grafico-circular"></canvas>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="card bg-success text-white mb-2">
                    <div class="card-body" id="texto-card-total-ejercicios"></div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="card bg-danger text-white mb-2">
                    <div class="card-body" id="texto-card-sin-ejercicios"></div>
                </div>
            </div>
            <div class="col-xl-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area me-1"></i>
                        Ejercicios Físicos por Día
                    </div>
                    <div class="card-body">
                        <canvas id="grafico-area"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


  <style>
   table {
  width: 100%;
}

table, td {
  border-collapse: collapse;
  border: 1px solid #000;
}

thead {
  display: table; /* to take the same width as tr */
  width: calc(100% - 17px); /* - 17px because of the scrollbar width */
}

tbody {
  display: block; /* to enable vertical scrolling */
  max-height: 200px; /* e.g. */
  overflow-y: scroll; /* keeps the scrollbar even if it doesn't need it; display purpose */
}

th, td {
  width: 33.33%; /* to enable "word-break: break-all" */
  padding: 5px;
   text-align: center;
  word-break: break-all; /* 4. */
}

tr {
  display: table; /* display purpose; th's border */
  width: 100%;
  box-sizing: border-box; /* because of the border (Chrome needs this line, but not FF) */
}

td {
  text-align: center;
  border-bottom: none;
  border-left: none;
}
