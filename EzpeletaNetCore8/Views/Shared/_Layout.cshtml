@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EzpeletaNetCore8</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EzpeletaNetCore8.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />

</head>

<body>

     @if (SignInManager.IsSignedIn(User)){

     
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-success text-white">Movimiento Activo</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-success p-3" href="~/Home/Index"><i class="fa-solid fa-table-columns"></i> Panel General</a>
                <a class="list-group-item list-group-item-action list-group-item-success p-3" href="~/TipoEjercicios/Index"><i class="fa-solid fa-list-check"></i> Tipo de Ejercicios</a>
                <a class="list-group-item list-group-item-action list-group-item-success p-3" href="~/EjerciciosFisicos/Index"><i class="fa-solid fa-ranking-star"></i> Ejercicios Físicos</a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-success bg-success border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-success" id="sidebarToggle"></button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation"><span
                            class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <partial name="_LoginPartial" />                           
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid">
                <main role="main" class="mt-3 pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    }
    else{
         <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js"></script>
      <script src="~/fontawesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
