@page
@model RegisterModel
@{
  ViewData["Title"] = "Registro de Usuario";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-12">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="~/img/logo.jpg" style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-4 pb-1">Mantiene tu Cuerpo Activo</h4>
                </div>

                <form id="account" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
              
                  <div class="row">
                  
                    <div data-mdb-input-init class="col-5 orm-outline mb-1">
                      <label class="form-label" for="NombreCompleto">Nombre Completo</label>
                      <input name="NombreCompleto" type="text" id="NombreCompleto" class="form-control" />
                      @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                    </div>

                    <div data-mdb-input-init class="col-3 form-outline mb-1">
                      <label class="form-label" for="FechaNacimiento">Fecha de Nacimiento</label>
                      <input name="FechaNacimiento" type="date" id="FechaNacimiento" class="form-control" />
                      @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                    </div>

                    <div data-mdb-input-init class="col-2 form-outline mb-1">
                      <label class="form-label" for="FechaNacimiento">Genero</label>
                      <select name="Genero" id="Genero" class="form-control">
                        <option value="1">Masculino</option>
                        <option value="2">Femenino</option>
                      </select>
                      @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                    </div>

                    <div data-mdb-input-init class="col-1 form-outline mb-1">
                        <label class="form-label" for="Peso">Peso</label>
                      <input name="Peso" type="tel" id="Peso" class="form-control" />                   
                      @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                    </div>

                    <div data-mdb-input-init class="col-1 form-outline mb-1">
                      <label class="form-label" for="Altura">Altura</label>
                      <input name="Altura" type="tel" id="Altura" class="form-control" />
                      @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                    </div>

                      <div data-mdb-input-init class="col-4 form-outline mb-1">
                      <label class="form-label" for="Input1">Email</label>
                      <input asp-for="Input.Email" type="email" id="Input1" class="form-control"
                        placeholder="Dirección de correo electrónico" />
                      <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div data-mdb-input-init class="col-4 form-outline mb-1">
                      <label class="form-label" for="Input2">Contraseña</label>
                      <input asp-for="Input.Password" type="password" id="Input2" class="form-control" />
                      <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div data-mdb-input-init class="col-4 form-outline mb-4">
                      <label class="form-label" for="Input3">Confirmar Contraseña</label>
                      <input asp-for="Input.ConfirmPassword" type="password" id="Input3" class="form-control" />
                      <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center pt-1 mb-3 pb-1">
                      <button data-mdb-button-init data-mdb-ripple-init
                        class="btn btn-primary btn-block btn-lg gradient-custom-2 mb-1" id="registerSubmit"
                        type="submit">Registrarme</button>
                    </div>

                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">¿Tienes cuenta?</p>
                      <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" data-mdb-button-init
                        data-mdb-ripple-init class="btn btn-outline-success">Ingresar</a>
                    </div>
                  </div>
                </form>

              </div>
            </div>
            @* <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
            <h4 class="mb-4">Movimiento Activo App</h4>
            <p class="small mb-0">Aplicación para registrar y monitorear sus actividades físicas diarias, fomentando así
            un estilo de vida más activo y saludable.</p>
            </div>
            </div> *@
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
