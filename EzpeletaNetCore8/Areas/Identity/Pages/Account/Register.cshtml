@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

  <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">Mantiene tu Cuerpo Activo</h4>
                </div>

                <form id="account" method="post">
                  <p>Por favor, ingrese a su cuenta</p>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <input asp-for="Input.Email" type="email" id="form2Example11" class="form-control"
                      placeholder="Phone number or email address" />
                    <label class="form-label" for="form2Example11">Email</label>
                  </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <input asp-for="Input.Password" type="password" id="form2Example22" class="form-control" />
                    <label class="form-label" for="form2Example22">Contraseña</label>
                  </div>

                       <div data-mdb-input-init class="form-outline mb-4">
                    <input asp-for="Input.ConfirmPassword" type="password" id="form2Example22" class="form-control" />
                    <label class="form-label" for="form2Example22">Confirmar Contraseña</label>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" id="registerSubmit" type="submit" >Registrarme</button>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">¿Tienes cuenta?</p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-danger">Ingresar</a>
                  </div>

                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">Movimiento Activo App</h4>
                <p class="small mb-0">Aplicación de ejercicios físicos!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
